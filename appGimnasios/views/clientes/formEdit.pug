extends ../layout

block content
    h2.mt-5 Edita Cliente
    form(action="/clientes/update", method="POST")
        .form-group
            label Nombre
            input.form-control(type="text", name="nombre", value=cliente.nombre)
        .form-group
            label Apellidos
            input.form-control(type="text", name="apellidos", value=cliente.apellidos)
        .form-group
            label Direcci√≥n
            input.form-control(type="text", name="direccion", value=cliente.direccion)
        .form-group
            label Email
            input.form-control(type="text", name="email", value=cliente.email)
        .form-group
            label Edad
            input.form-control(type="number", name="edad", value=cliente.edad)
        .form-group
            label Sexo            
            select.form-control(name="sexo", autocomplete="off")
                option(value="M", selected=(cliente.sexo === 'M')) Masculino
                option(value="F", selected=(cliente.sexo === 'F')) Femenino
        .form-group
            label Cuota
            input.form-control(type="text", name="cuota", value=cliente.cuota)
        .form-group
            label Dni
            input.form-control(type="text", name="dni", value=cliente.dni)
        .form-group
            label Fecha Nacimiento
            input.form-control(type="date", name="fecha_nacimiento", value=cliente.fecha_nacimiento)
        input(type="hidden", name="idCliente", value=cliente.id)
        input.btn.btn-info.btn-block(type="submit", value="Enviar")
